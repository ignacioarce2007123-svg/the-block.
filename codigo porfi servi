  <script>
    const toggleBtn = document.getElementById('toggleMaterials');
    const materials = document.getElementById('materialsList');

    toggleBtn.addEventListener('click', () => {
      const open = materials.classList.toggle('open');
      toggleBtn.setAttribute('aria-expanded', open ? 'true' : 'false');
      toggleBtn.textContent = open ? 'Ocultar materiales' : 'Ver materiales ecol√≥gicos usados';
      // enfoque accesible
      if(open) materials.querySelector('h2')?.focus();
    });

    function downloadFicha(){
      // Genera una ficha resumen simple y la descarga como .txt (puedes reemplazar con PDF server-side)
      const text = `THE BLOCK ‚Äî Ficha Resumen de Materiales\n\n` +
        `Materiales: CLT, aceros reciclados, hormig√≥n reciclado, paneles s√°ndwich, vidrios eficientes, pinturas low-VOC, cubiertas verdes, paneles fotovoltaicos, sistemas HVAC eficientes, prefabricados.\n\n` +
        `Contacto: correo@theblock.com | +54 9 11 1234 5678\n\n` +
        `La selecci√≥n final se define en proyecto ejecutivo.`;
      const blob = new Blob([text], { type: 'text/plain' });
      const url = URL.createObjectURL(blob);
      const a = document.createElement('a');
      a.href = url;
      a.download = 'ficha_materiales_theblock.txt';
      document.body.appendChild(a);
      a.click();
      a.remove();
      URL.revokeObjectURL(url);
    }
  </script>
