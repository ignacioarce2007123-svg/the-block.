  <script>
    function mostrarInfo(id) {
      // Oculta todos los cuadros de info
      document.querySelectorAll('.info').forEach(div => {
        div.style.display = 'none';
      });
      // Muestra solo el cuadro clickeado
      document.getElementById(id).style.display = 'block';
    }
  </script>

