  <!-- Lightbox modal -->
  <div id="modal" class="modal" aria-hidden="true">
    <div class="modal-card" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
      <img id="modalImg" class="modal-img" alt="Proyecto">
      <div class="modal-info">
        <h4 id="modalTitle">T√≠tulo</h4>
        <p id="modalDesc" class="muted">Descripci√≥n del proyecto...</p>
        <p style="margin-top:12px" class="muted">Categor√≠a: <span id="modalTag"></span></p>
      </div>
      <button class="close" id="modalClose" aria-label="Cerrar">‚úï</button>
    </div>
  </div>

  <script>
    // Selecci√≥n de elementos
    const modal = document.getElementById('modal');
    const modalImg = document.getElementById('modalImg');
    const modalTitle = document.getElementById('modalTitle');
    const modalDesc = document.getElementById('modalDesc');
    const modalTag = document.getElementById('modalTag');
    const modalClose = document.getElementById('modalClose');

    // Abrir modal con la info del card
    function openModalFromCard(card){
      const title = card.dataset.title || 'Proyecto';
      const desc  = card.dataset.desc || '';
      const img   = card.dataset.img || card.querySelector('img')?.src;
      const tag = (card.querySelector('.tag')?.textContent) || '';

      modalImg.src = img;
      modalImg.alt = title;
      modalTitle.textContent = title;
      modalDesc.textContent = desc;
      modalTag.textContent = tag;
      modal.classList.add('open');
      modal.setAttribute('aria-hidden','false');
      modalClose.focus();
    }

    // Cerrar modal
    function closeModal(){
      modal.classList.remove('open');
      modal.setAttribute('aria-hidden','true');
    }

    // Delegaci√≥n: agregar listener a todas las cards
    document.querySelectorAll('.card').forEach(card => {
      card.addEventListener('click', () => openModalFromCard(card));
      card.addEventListener('keypress', (e) => { if(e.key === 'Enter' || e.key === ' ') openModalFromCard(card); });
    });

    // Cerrar al click en close o fuera de la modal-card
    modalClose.addEventListener('click', closeModal);
    modal.addEventListener('click', (e) => {
      if(e.target === modal) closeModal();
    });

    // Cerrar con Escape
    document.addEventListener('keydown', (e) => {
      if(e.key === 'Escape' && modal.classList.contains('open')) closeModal();
    });
  </script>
</body>
</html>
