    <script>
        function showContactInfo(contactType) {
            // Oculta toda la informaci√≥n primero con animaci√≥n
            document.querySelectorAll('.contact-info').forEach(info => {
                info.style.animation = 'fadeInUp 0.3s ease reverse forwards';
                setTimeout(() => {
                    info.style.display = 'none';
                }, 300);
            });
            
            // Muestra solo la informaci√≥n seleccionada con animaci√≥n
            setTimeout(() => {
                const infoElement = document.getElementById(`${contactType}-info`);
                infoElement.style.display = 'block';
                infoElement.style.animation = 'fadeInUp 0.5s ease forwards';
            }, 300);
        }
    </script>
